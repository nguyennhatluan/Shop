@model Shop.Web.Infrastructure.Core.PaginationSet<Shop.Web.Models.ProductViewModel>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layouts.cshtml";
    var category = ViewBag.productCategory;
}

<div class="women-product">
    <div class=" w_content">
        <div class="women">
            <a href="#"><h4>@category.Name - <span>@Model.TotalCount sản phẩm</span> </h4></a>
            <ul class="w_nav">
                <li>Sắp xếp : </li>
                <li><a class="active" href="#">Phổ biến</a></li> |
                <li><a href="#">Mới </a></li> |
                <li><a href="#">Giảm giá</a></li> |
                <li><a href="#">Giá: Cao Thấp </a></li>
                <div class="clearfix"> </div>
            </ul>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!-- grids_of_4 -->
    <div class="grid-product">
        @foreach (var item in Model.Items)
        {

            <div class="product-grid">
                <div class="content_box">
                    <a href="/product/@item.Alias/@item.ID">
                        <div class="left-grid-view grid-view-left">
                            <img src="@item.Image" class="img-responsive watch-right" alt="" />
                            <div class="mask">
                                <div class="info">Xem nhanh</div>
                            </div>

                        </div>
                    </a>
                    <h4><a href="#">@item.Name</a></h4>
                    <p>@item.Description</p>
                    @(item.Price==0?"Liên hệ":item.Price.ToString("N2"))
                </div>
            </div>


        }
    </div>
