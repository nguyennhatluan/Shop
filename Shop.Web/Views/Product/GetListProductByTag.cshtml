
@{
    ViewBag.Title = "GetListProductByTag";
    Layout = "~/Views/Shared/_Layouts.cshtml";
    var tag = (Shop.Web.Models.TagViewModel)ViewBag.Tag;
}

@model Shop.Web.Infrastructure.Core.PaginationSet<Shop.Web.Models.ProductViewModel>

    <div class="women-product">
        <div class=" w_content">
            <div class="women">
                <a href="#"><h4>@tag.Name - <span>@Model.TotalCount sản phẩm</span> </h4></a>

                <div class="clearfix"> </div>
            </div>
        </div>
        <!-- grids_of_4 -->
        <div class="grid-product">
            @foreach (var item in Model.Items)
            {

                <div class="product-grid">
                    <div class="content_box">
                        <a href="/product-detail/@item.Alias/@item.ID">
                            <div class="left-grid-view grid-view-left">
                                <img src="@item.Image" class="img-responsive watch-right" alt="" />
                                <div class="mask">
                                    <div class="info">Xem nhanh</div>
                                </div>

                            </div>
                        </a>
                        <h4><a href="#">@item.Name</a></h4>
                        <p>@item.Description</p>
                        @(item.Price==0?"Liên hệ":item.Price.ToString("N2"))
                    </div>
                </div>


            }
        </div>
        <div class="clearfix"> </div>

        @if (Model.TotalPages > 1)
        {
            var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
            var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-6">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end">

                            @if (Model.Page > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" title="trang đầu" href="?page=1">First</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" title="trang trước" href="?page=(@Model.Page-1)">Previous</a>
                                </li>

                            }
                            @for (var i = startPageIndex; i <= endPageIndex; i++)
                            {
                                if (Model.Page == i)
                                {
                                    <li class="page-item active">
                                        <a class="page-link" href="?page=@i" title="Trang @i">@i</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@i" title="Trang @i">@i</a>
                                    </li>
                                }
                            }
                            @if (Model.Page < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" title="trang tiếp theo" href="?page=(@Model.Page+1)">Next</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" title="trang cuối" href="?page=@Model.TotalPages">End</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
                <div class="col-md-2"></div>
            </div>
        }
        else
        {
            
        }
    </div>
